# Storage Mode Configuration
# Set to 'true' to use browser localStorage instead of Redis (for test/dev environments)
# When enabled, no authentication is required and data is stored locally in the browser
VITE_USE_LOCAL_STORAGE=false

# Authentication password for admin actions (only used when VITE_USE_LOCAL_STORAGE=false)
VITE_AUTH_PASSWORD=your_password_here

# Upstash Redis Configuration (only needed when VITE_USE_LOCAL_STORAGE=false)
# Get these values from your Upstash console: https://console.upstash.com/
# Create a Redis database -> Copy REST API credentials
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token_here